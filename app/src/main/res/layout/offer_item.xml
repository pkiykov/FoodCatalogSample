<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="2dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/dish_image_view"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:contentDescription="@string/dish_image"
            android:scaleType="centerInside"
            android:src="@drawable/n0" />

        <TextView
            android:id="@+id/dish_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:padding="8dp"
            android:layout_toRightOf="@+id/dish_image_view"
            android:layout_toEndOf="@+id/dish_image_view"
            android:text="asdfasdfadfadfad"
            android:textAppearance="?android:textAppearanceMedium" />

        <TextView
            android:id="@+id/weight_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/dish_image_view"
            android:layout_toEndOf="@+id/dish_image_view"
            android:maxLines="1"
            android:padding="8dp"
            android:text="asdfasd"
            android:textAppearance="?android:textAppearanceListItemSmall"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:padding="8dp"
            android:text="200$"
            android:textAppearance="?android:textAppearanceLarge" />
    </RelativeLayout>

</android.support.v7.widget.CardView>